<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgizVeDisSagligi.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgizVeDisSagligi.Web.styles.css" asp-append-version="true" />
    <style>
        /* Genel düzenlemeler */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: #004080;
            padding: 1rem;
        }

            header h1 {
                color: #fff;
                font-size: 1.5rem;
                text-align: center;
            }

        /* Navbar stil */
        nav.navbar {
            background-color: #004080;
        }

            nav.navbar a {
                color: #ffffff !important;
                margin-right: 15px;
                transition: color 0.3s ease;
            }

                nav.navbar a:hover {
                    color: #d1e7fd !important;
                }

        /* Ana içerik stil */
        .container {
            margin-top: 2rem;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Footer stil */
        footer.footer {
            background-color: #004080;
            color: #ffffff;
            padding: 1rem 0;
            text-align: center;
            margin-top: 2rem;
        }

            footer.footer a {
                color: #d1e7fd;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer.footer a:hover {
                    color: #ffffff;
                }
    </style>
</head>
<body>
    <header>
        <h1>Agiz ve Dis Sagligi</h1>
        @await Html.PartialAsync("_navbar")
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AgizVeDisSagligi.Web 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
