@model AgizVeDisSagligi.Entity.Entites.Suggestion
<style>
    .suggestion {
        background-color: #f1f1f1; /* Hafif gri arka plan */
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        text-align: center;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Hafif gölgelendirme */
    }

    .suggestion p {
        font-size: 1.4em; /* Yazı boyutunu büyüt */
        color: #333; /* Yazı rengini koyu gri yap */
        font-weight: 600; /* Yazıyı kalınlaştır */
        line-height: 1.5;
        margin: 0;
    }
</style>
<div class="suggestion">
    <p>@Model.Recommendation</p>
</div>