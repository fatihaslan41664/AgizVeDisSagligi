@model User

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>Kayıt Ol</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="registrationForm" asp-controller="LoginRegister" asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" id ="name" placeholder="İsminizi girin" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SurName">Soyisim</label>
                    <input asp-for="SurName" class="form-control" id = "surname"placeholder="Soyisminizi girin" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Mail">E-posta Adresi</label>
                    <input asp-for="Mail" id="email" class="form-control" placeholder="E-posta adresinizi girin" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Passaword">Şifre</label>
                    <input asp-for="Passaword" id="password" type="password" class="form-control" placeholder="Şifrenizi girin" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="BirthDate">Doğum Tarihi</label>
                    <input asp-for="BirthDate" type="date" id="birthdate" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                <p id="errorMessage" style="color:red;"></p> <!-- Hata mesajları için -->
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-controller="Home" asp-action="Index">Zaten hesabınız var mı? Giriş Yapın.</a>
</div>

<!-- JavaScript dosyasını burada ekle -->
<script src="~/js/Kayit.js"></script>
